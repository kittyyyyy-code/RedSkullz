    .skullcat{position:absolute;width:80px;height:80px;background-size:cover;background-position:center;border-radius:14px;box-shadow:0 8px 30px rgba(0,0,0,0.65);transform:scale(.85);transition:transform .2s ease}
    .skullcat:hover{transform:scale(1);filter:drop-shadow(0 6px 18px rgba(255,43,43,0.25))}

