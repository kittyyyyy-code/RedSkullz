  <script>
    // -- Basic state and utilities
    const scoreKey = 'rsk_score_v1';
    const unlocksKey = 'rsk_unlocks_v1';
    let score = parseInt(localStorage.getItem(scoreKey) || '0');
    let unlocks = JSON.parse(localStorage.getItem(unlocksKey) || '[]');

    const scoreEl = document.getElementById('score');
    const scoreTop = document.getElementById('score-top');
    const playArea = document.getElementById('play-area');
    const secretPanel = document.getElementById('secret-panel');
    const secretList = document.getElementById('secret-list');

    function updateScoreUI(){
      scoreEl.textContent = score;
      scoreTop.textContent = score;
    }
    function save(){localStorage.setItem(scoreKey, String(score));localStorage.setItem(unlocksKey, JSON.stringify(unlocks));}

    updateScoreUI();

    // -- spawn a skull cat randomly inside play area
    function spawnSkullCat({x=null,y=null,points=25} = {}){
      const el = document.createElement('div');
      el.className = 'skullcat';
      // image fallback; user should add assets/skullcat.png
      el.style.backgroundImage = 'url(assets/skullcat.png), linear-gradient(135deg,var(--red),#aa0000)';

      const rect = playArea.getBoundingClientRect();
      const w = Math.max(60, Math.min(120, rect.width * 0.18));
      el.style.width = w + 'px';
      el.style.height = w + 'px';

      const px = (x === null) ? Math.random() * (rect.width - w) : x;
      const py = (y === null) ? Math.random() * (rect.height - w) : y;
      el.style.left = px + 'px';
      el.style.top = py + 'px';

      // random rotation
      el.style.transform = 'rotate(' + (Math.random()*30-15) + 'deg) scale(.9)';

      // click handler
      el.addEventListener('click', (ev)=>{
        ev.stopPropagation();
        // pop animation
        el.style.transition = 'transform .25s cubic-bezier(.2,.9,.3,1),opacity .5s';
        el.style.transform += ' scale(1.18)';
        el.style.opacity = '0';
        setTimeout(()=>el.remove(),500);

        // award points
        score += points;
        // little burst
        tinyBurst(parseFloat(el.style.left)+w/2, parseFloat(el.style.top)+w/2);
        updateScoreUI();
        save();
      });

      // double-click to get a secret 777 points if Konami theme unlocked
      el.addEventListener('dblclick', ()=>{
        if(unlocks.includes('konami')){score += 777; updateScoreUI(); save(); showToast('Lucky double! +777');}
      });

      playArea.appendChild(el);

      // remove after 20s if not clicked
      setTimeout(()=>{if(document.body.contains(el)) el.remove()},20000);
      return el;
    }

    document.getElementById('btn-spawn').addEventListener('click', ()=>spawnSkullCat());
    document.getElementById('btn-reset').addEventListener('click', ()=>{score=0;unlocks=[];save();updateScoreUI();renderSecrets();showToast('Points and unlocks reset')});
    document.getElementById('btn-randomize').addEventListener('click', ()=>{
      // spawn many cats
      for(let i=0;i<6;i++) spawnSkullCat({points:10});
      showToast('Shuffle!');
    });

    document.getElementById('btn-hunt').addEventListener('click', ()=>{
      // blink and spawn
      playArea.animate([{filter:'brightness(1.4)'},{filter:'brightness(1)'}],{duration:500,iterations:1});
      for(let i=0;i<4;i++) spawnSkullCat({points:20});
    });

    // secret button toggles secret panel
    document.getElementById('btn-secret').addEventListener('click', ()=>{secretPanel.style.display = secretPanel.style.display === 'block' ? 'none' : 'block'});

    // leader button shows local leaderboard (rudimentary)
    document.getElementById('btn-leader').addEventListener('click', ()=>{
      const cp = prompt('Local leaderboard: Enter your name to save your score (this stores in your browser)');
      if(cp){
        const all = JSON.parse(localStorage.getItem('rsk_leader_v1')||'[]');
        all.push({name:cp,score:score,date:new Date().toISOString()});
        all.sort((a,b)=>b.score-a.score);
        localStorage.setItem('rsk_leader_v1', JSON.stringify(all.slice(0,15)));
        alert('Saved â€” current top:\n' + all.slice(0,8).map((x,i)=>`${i+1}. ${x.name} â€” ${x.score}`).join('\n'));
      }
    });

    // moon click â€” secret reward
    document.getElementById('moon').addEventListener('click', ()=>{
      score += 50;unlocks.push('moontouch');unlocks = Array.from(new Set(unlocks));save();updateScoreUI();renderSecrets();fireworkBurst(window.innerWidth-120,80);showToast('Moon touched! +50');
    });

    // render secrets
    function renderSecrets(){
      secretList.innerHTML = '';
      if(unlocks.length === 0){secretList.textContent = 'No secrets unlocked yet.';return}
      unlocks.forEach(u=>{
        const d = document.createElement('div');d.style.margin='6px 0';d.textContent = 'â€¢ ' + u;secretList.appendChild(d)
      })
    }
    renderSecrets();

    // tiny particle burst (for clicks)
    function tinyBurst(x,y){
      const c = document.createElement('canvas');
      c.width = 200; c.height = 200; c.style.position='absolute'; c.style.left = (x-100)+'px'; c.style.top = (y-100)+'px'; c.style.pointerEvents='none'; c.style.zIndex=9999; document.body.appendChild(c);
      const ctx = c.getContext('2d');
      let parts = [];
      for(let i=0;i<18;i++){parts.push({x:100,y:100, vx:(Math.random()-0.5)*6, vy:(Math.random()-0.9)*6, life:60, col: Math.random()>0.5?getComputedStyle(document.documentElement).getPropertyValue('--red'):getComputedStyle(document.documentElement).getPropertyValue('--yellow')})}
      let t=0; const id = setInterval(()=>{
        ctx.clearRect(0,0,200,200);
        parts.forEach(p=>{p.x+=p.vx;p.y+=p.vy;p.vy+=0.18;p.life--;ctx.fillStyle = p.col; ctx.fillRect(p.x,p.y,4,4)});
        t++; if(t>70){clearInterval(id); c.remove()}
      },16);
    }

    // small toast messages
    function showToast(txt){
      const t = document.createElement('div');t.textContent = txt; t.style.position='fixed';t.style.right='18px';t.style.bottom='18px';t.style.padding='10px 14px';t.style.borderRadius='10px';t.style.background='linear-gradient(90deg,var(--red),var(--yellow))';t.style.color='#110';t.style.fontWeight='700';t.style.zIndex=99999;document.body.appendChild(t);setTimeout(()=>{t.style.transition='transform .35s,opacity .35s';t.style.transform='translateY(20px)';t.style.opacity='0';},1500);setTimeout(()=>t.remove(),2200);
    }

    // simple Konami code detector
    const konami = [38,38,40,40,37,39,37,39,66,65]; let kpos=0;
    window.addEventListener('keydown', (e)=>{
      if(e.keyCode === konami[kpos]){kpos++; if(kpos === konami.length){kpos=0; unlocks.push('konami');unlocks = Array.from(new Set(unlocks));score += 500;save();renderSecrets();updateScoreUI();applyKonamiTheme();showToast('Konami unlocked! +500')}} else kpos = (e.keyCode === konami[0])?1:0;
    });

    function applyKonamiTheme(){
      document.body.style.background = 'linear-gradient(45deg,#120001,#200000)';
      document.querySelectorAll('.ribbon').forEach(r=>r.style.display='none');
      // drop confetti
      for(let i=0;i<12;i++) spawnSkullCat({points:30});
    }

    // small fireworks
    function fireworkBurst(x,y){
      // spawn many tiny bursts
      for(let i=0;i<14;i++) tinyBurst(x + (Math.random()-0.5)*120, y + (Math.random()-0.5)*120);
    }

    // particle background (simple)
    const canvas = document.getElementById('particle-canvas');
    const ctx = canvas.getContext('2d');
    let w=0,h=0,particles=[];
    function resize(){w=canvas.width=innerWidth;h=canvas.height=innerHeight;particles = Array.from({length:Math.max(24, Math.floor(w*h/50000))}).map(()=>({x:Math.random()*w,y:Math.random()*h, r:Math.random()*2+1, vx:(Math.random()-0.5)/1.4, vy:(Math.random()-0.5)/1.4, col: Math.random()>0.7?getComputedStyle(document.documentElement).getPropertyValue('--yellow'):getComputedStyle(document.documentElement).getPropertyValue('--red')}))}
    addEventListener('resize', resize); resize();
    function frame(){ ctx.clearRect(0,0,w,h); particles.forEach(p=>{p.x+=p.vx; p.y+=p.vy; if(p.x<0) p.x=w; if(p.x> w) p.x=0; if(p.y<0) p.y=h; if(p.y>h) p.y=0; ctx.beginPath(); ctx.fillStyle=p.col; ctx.arc(p.x,p.y,p.r,0,Math.PI*2); ctx.fill();}); requestAnimationFrame(frame)}
    frame();

    // click anywhere to spawn tiny cat
    playArea.addEventListener('click', (e)=>{
      const rect = playArea.getBoundingClientRect();
      const x = e.clientX - rect.left; const y = e.clientY - rect.top;
      spawnSkullCat({x: x - 40, y: y - 40, points:15});
      tinyBurst(e.clientX, e.clientY);
    });

    // playful secret: click top-right area too fast to reveal secret panel
    let moonClicks = 0; document.getElementById('moon').addEventListener('dblclick', ()=>{unlocks.push('moondbl');unlocks = Array.from(new Set(unlocks));score += 120;save();renderSecrets();showToast('Moon double! +120')});

    // load any previously saved unlocks
    (function(){unlocks = JSON.parse(localStorage.getItem(unlocksKey) || '[]'); if(unlocks.includes('konami')) applyKonamiTheme(); renderSecrets();})();

    // little instruction: if skullcat image missing, show placeholder and instructions
    (function checkAssets(){
      const img = new Image(); img.src = 'assets/skullcat.png'; img.onload = ()=>{}; img.onerror = ()=>{
        const p = document.createElement('div'); p.style.position='absolute'; p.style.right='14px'; p.style.top='100px'; p.style.padding='8px 12px'; p.style.borderRadius='10px'; p.style.background='rgba(255,255,255,0.04)'; p.style.fontSize='13px'; p.innerHTML = 'Add a skull cat image at <code>/assets/skullcat.png</code> to replace placeholders.'; document.body.appendChild(p);
      }
    })();

    // tiny startup sparkle
    setTimeout(()=>{for(let i=0;i<6;i++) spawnSkullCat({points:12})},700);
  </script>
</body>
</html>
